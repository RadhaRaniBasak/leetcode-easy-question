class Solution {
    public int countValidSelections(int[] nums) {
        int sum = 0;
        for (int val: nums) sum += val;

        int result = 0;
        int prefixSum = 0;
        for (int i = 0; i < nums.length; i++) {
            prefixSum += nums[i];
            if (nums[i] == 0) {
                int diff = Math.abs(sum - prefixSum * 2);
                if (diff == 0)
                    result += 2;
                else if (diff == 1)
                    result++;
            }
        }

        return result;
    }
}

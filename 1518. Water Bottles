class Solution {
    public int numWaterBottles(int numBottles, int numExchange) {
        int result = numBottles;
        int emptyWaterBottle = numBottles;

        while ( emptyWaterBottle >= numExchange){
            int newWaterBottle = emptyWaterBottle / numExchange;
            result += newWaterBottle;
            emptyWaterBottle = newWaterBottle + (emptyWaterBottle % numExchange);

        }
        return result;
    }
}
